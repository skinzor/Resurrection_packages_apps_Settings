<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/rr_settings_title" >

    <PreferenceCategory
        android:title="@string/rr_cat_title">

         <PreferenceScreen
                android:id="@+id/status_bar_settings"
                android:title="@string/status_bar_title"
                android:fragment="com.android.settings.cyanogenmod.StatusBarSettings"
                android:icon="@drawable/ic_rr_statusbar_tint"
                />

        <!-- Notification drawer -->
        <PreferenceScreen
                android:id="@+id/notification_drawer_settings"
                android:title="@string/notification_drawer_title"
                android:fragment="com.android.settings.cyanogenmod.NotificationDrawerSettings"
                android:icon="@drawable/ic_rr_notification_panel_tint"
                />
        <PreferenceScreen
                android:id="@+id/rr_recents_settings"
                android:title="@string/recents_settings"
                android:fragment="com.android.settings.rr.RecentsSettings"
                android:icon="@drawable/ic_rr_recents_tint"
                        />
        <PreferenceScreen
                android:id="@+id/lock_settings"
                android:title="@string/rr_lockscreen_title"
                android:fragment="com.android.settings.rr.LockSettings"
                android:icon="@drawable/ic_rr_lockscreen_tint"
                />

        <PreferenceScreen
                android:id="@+id/button_settings"
                android:title="@string/button_pref_title"
                android:fragment="com.android.settings.ButtonSettings"
                android:icon="@drawable/ic_rr_buttons_tint"
                />

        <PreferenceScreen
                android:id="@+id/rr_animation_settings"
                android:title="@string/animation_settings"
                android:fragment="com.android.settings.rr.AnimationSettings"
                android:icon="@drawable/ic_rr_animations_tint"
                        />

        <PreferenceScreen
                android:id="@+id/rr_gesture_settings"
                android:title="@string/gesture_settings"
                android:fragment="com.android.settings.rr.GestureSettings"
                android:icon="@drawable/ic_rr_gestures_tint"
                        />

         <PreferenceScreen
                android:id="@+id/rr_misc_settings"
                android:title="@string/misc_settings_title"
                android:fragment="com.android.settings.rr.MiscSettings"
                android:icon="@drawable/ic_rr_misc_tint"
                />

         <PreferenceScreen
                android:id="@+id/rr_performance_settings"
                android:title="@string/performance_settings"
                android:fragment="com.android.settings.rr.RRperformance"
                android:icon="@drawable/ic_rr_performance_tint"
                />

        <!-- Updater -->
        <PreferenceScreen
                android:key="update_settings"
                android:title="@string/updater_title"
                android:icon="@drawable/ic_rr_updates_tint">
            <intent android:action="android.intent.action.MAIN"
                    android:targetPackage="com.fusionjack.slimota"
                    android:targetClass="com.fusionjack.slimota.MainActivity" />
        </PreferenceScreen>                

</PreferenceCategory>

</PreferenceScreen>
